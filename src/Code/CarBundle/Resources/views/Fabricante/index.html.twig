{% extends "::base.html.twig" %}

{% block title %}Lista de fabricantes{% endblock %}

{% block body %}
    <div class="container">
        <h1>Fabricantes</h1>
        <a href="{{ path('fabricante_new') }}" class="btn btn-default">Novo fabricante</a>
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Fabricante</th>
                <th>Ação</th>
            </tr>
            {% for fabricante in fabricantes %}
                <tr>
                    <td>{{ fabricante.id }}</td>
                    <td>{{ fabricante.nome }}</td>
                    <td>
                        <a href="{{ path('fabricante_edit', {'id' : fabricante.id }) }}">Editar</a>
                        |
                        <a href="{{ path('fabricante_delete', {'id' : fabricante.id }) }}">Excluir</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}